{
    "dart.flutterSdkPath": "",
    "dart.lineLength": 80,
    "dart.showTodos": true,
    "dart.previewLsp": true,
    "dart.analysisServerFolding": true,
    "dart.enableSdkFormatter": true,
    "dart.insertArgumentPlaceholders": true,
    "dart.updateImportsOnRename": true,
    "dart.warnWhenEditingFilesOutsideWorkspace": true,
    "dart.hotReloadOnSave": "always",
    "flutter.debugExternalPackageLibraries": true,
    "flutter.debugSdkLibraries": false,
    "files.associations": {
        "*.dart": "dart"
    },
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit",
        "source.fixAll": "explicit"
    }
}

